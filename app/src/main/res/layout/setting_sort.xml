<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".view_setting.Sort">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:text="@string/sort"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolBar"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/login_info"
            android:layout_centerInParent="true"
            android:layout_margin="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/lanGroup"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/az"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/az"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:gravity = "start|center_vertical"
                    android:textSize="18sp"
                    android:padding = "8dp"
                    android:checked="true"
                    android:theme="@style/MyRadioButton"
                    android:textColor="@color/brownLight"/>

                <RadioButton
                    android:id="@+id/za"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "@string/za"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:gravity = "start|center_vertical"
                    android:textSize="18sp"
                    android:padding = "8dp"
                    android:theme="@style/MyRadioButton"
                    android:textColor="@color/brownLight"/>

                <RadioButton
                    android:id="@+id/hl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "@string/price_high_low"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:gravity = "start|center_vertical"
                    android:textSize="18sp"
                    android:padding = "8dp"
                    android:theme="@style/MyRadioButton"
                    android:textColor="@color/brownLight"/>

                <RadioButton
                    android:id="@+id/lh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "@string/price_low_high"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:gravity = "start|center_vertical"
                    android:textSize="18sp"
                    android:padding = "8dp"
                    android:theme="@style/MyRadioButton"
                    android:textColor="@color/brownLight"/>

            </RadioGroup>

        </RelativeLayout>

        <Button
            android:id="@+id/sortApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="100dp"
            android:padding="6dp"
            android:text="@string/apply"
            android:minHeight="0dp"
            android:background="@drawable/big_button_brown"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/footer" />

</RelativeLayout>