<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.paymentResult.PaymentResult"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <ScrollView
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:gravity="center_horizontal"
                android:text="@string/congratulation"/>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:text="@string/your_order_completed_successfuly"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start">

                <LinearLayout
                    android:id="@+id/knet_titles"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize = "16sp"
                    android:textColor="@color/brownLight"
                    android:gravity="center_vertical"
                    android:text="@string/payment_Id"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize = "16sp"
                    android:textColor="@color/brownLight"
                    android:gravity="center_vertical"
                    android:text="@string/date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize = "16sp"
                    android:textColor="@color/brownLight"
                    android:gravity="center_vertical"
                    android:text="@string/result"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize = "16sp"
                    android:textColor="@color/brownLight"
                    android:gravity="center_vertical"
                    android:text="@string/order_id"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize = "16sp"
                    android:textColor="@color/brownLight"
                    android:gravity="center_vertical"
                    android:text="@string/total"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="start">

                <LinearLayout
                    android:id="@+id/knet_info"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                <TextView
                    android:id="@+id/paymentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize = "16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="gbujuj"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize = "16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="gbujuj"/>

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize = "16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="gbujtutyiuj"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize = "16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="gbujtutyiuj"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize = "16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="gbujuutuyutyj"/>


            </LinearLayout>

        </LinearLayout>



            <Button
                android:id="@+id/doneBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/done"
                android:background="@drawable/big_button_blue"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>